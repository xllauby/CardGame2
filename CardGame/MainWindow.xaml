<Window x:Class="CardGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainMenu" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="0,20,0,0">Выберите количество игроков</TextBlock>
        <ComboBox x:Name="playersComboBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="30">
            <ComboBoxItem Content="2" />
            <ComboBoxItem Content="3" />
            <ComboBoxItem Content="4" />
            <ComboBoxItem Content="5" />
            <ComboBoxItem Content="6" />
        </ComboBox>
        <Button Content="Начать игру" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Width="150" Height="40" Click="StartGameButton_Click"/>
    </Grid>
</Window>
