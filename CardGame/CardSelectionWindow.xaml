<Window x:Class="CardGame.CardSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор карты" Height="300" Width="400" MinHeight="300" MinWidth="400" MaxHeight="300" MaxWidth="400"
        Icon="image.png" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <ListBox x:Name="CardList" FontSize="20" SelectionMode="Single" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="CardList_SelectionChanged"/>
        <Button Content="Выбрать" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="30" Margin="0,0,10,10" Click="SelectButton_Click"/>
    </Grid>
</Window>
